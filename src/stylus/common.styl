
/* 常用边框阴影 */
.box-shadow {
    box-shadow 0 2px 10px 0 #e3e7f6
}

/* 登录注册元素水平垂直居中 */
.shadow-box {
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    background-color rgba(0,0,0,.3)
    z-index 200
    display flex
    justify-content center
    align-items center
}

/* 三个点文本省略 */
.ellipsis {
    overflow hidden
    text-overflow ellipsis
    white-space nowrap
}

